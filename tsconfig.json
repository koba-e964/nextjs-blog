{
  "compilerOptions": {
    "jsx": "preserve",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.js",
    "**/*.tsx",
    "lib/posts.ts",
    "pages/api/hello.ts",
    "components/date.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
